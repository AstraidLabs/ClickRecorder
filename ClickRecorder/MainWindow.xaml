                    <TextBlock x:Name="TxtFlaUI" Text="{Binding FlaUiText}" Foreground="#89B4FA" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock x:Name="TxtCoord" Text="{Binding CoordText}" Foreground="#F9E2AF" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock x:Name="TxtDur" Text="{Binding DurationText}" Foreground="#6C7086" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
