<Window x:Class="ClickRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:ClickRecorder.Helpers"
        Title="ðŸ–±ï¸ ClickRecorder â€“ FlaUI Auto Test" Height="820" Width="1300"
        MinWidth="1000" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E">
    <Window.Resources>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="13"/>
        </Style>
        <Style x:Key="Sec" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#89B4FA"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="13,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True"><Setter Property="Opacity" Value="0.80"/></Trigger>
                            <Trigger Property="IsEnabled"   Value="False"><Setter Property="Opacity" Value="0.30"/></Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BRed"    TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#F38BA8"/></Style>
        <Style x:Key="BGreen"  TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#A6E3A1"/></Style>
        <Style x:Key="BBlue"   TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#89B4FA"/></Style>
        <Style x:Key="BOrange" TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#FAB387"/></Style>
        <Style x:Key="BPurple" TargetType="Button" BasedOn="{StaticResource Btn}">
            <Setter Property="Background" Value="#CBA6F7"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
        </Style>
        <Style x:Key="BGray"   TargetType="Button" BasedOn="{StaticResource Btn}">
            <Setter Property="Background" Value="#585B70"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#181825"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CaretBrush" Value="#CDD6F4"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#181825"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="7,3"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#45475A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Separator"><Setter Property="Background" Value="#45475A"/><Setter Property="Margin" Value="0,8"/></Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#252535" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="ðŸ–±ï¸  ClickRecorder â€“ FlaUI Auto Test" FontSize="18" FontWeight="Bold" Foreground="#CDD6F4"/>
                    <TextBlock Foreground="#6C7086" FontSize="11" Margin="0,3,0,0"
                               Text="Nahraj kliknutÃ­ Â· FlaUI inspectuje elementy Â· PÅ™ehraj spolehlivÄ› Â· ZachyÅ¥ vÃ½jimky + call stack Â· HTML report"/>
                </StackPanel>

                <!-- FlaUI badge -->
                <Border Grid.Column="1" Background="#1a2a44" CornerRadius="6" Padding="10,5" Margin="0,0,10,0" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtFlaUIStatus" Text="âš™ FlaUI: Inicializujiâ€¦"
                               Foreground="#89B4FA" FontSize="11" FontWeight="SemiBold"/>
                </Border>

                <Border Grid.Column="2" x:Name="StatusPill" Background="#252535" CornerRadius="20" Padding="14,6" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtStatus" Text="â¸  Idle" FontSize="13" FontWeight="Bold" Foreground="#6C7086"/>
                </Border>
            </Grid>
        </Border>

        <!-- MAIN: 4 columns -->
        <Grid Grid.Row="1" Margin="10,10,10,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>   <!-- controls -->
                <ColumnDefinition Width="260"/>   <!-- recorded + inspector -->
                <ColumnDefinition Width="*"/>     <!-- results -->
                <ColumnDefinition Width="320"/>   <!-- exception detail -->
            </Grid.ColumnDefinitions>

            <!-- â”€â”€ COL 0: Controls â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Border Style="{StaticResource Card}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="NAHRÃVÃNÃ" Style="{StaticResource Sec}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Button x:Name="BtnRecord"     Content="âº NahrÃ¡t" Style="{StaticResource BRed}"
                                Click="BtnRecord_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnStopRecord" Content="â¹ Stop"   Style="{StaticResource BGray}"
                                Click="BtnStopRecord_Click" IsEnabled="False"/>
                    </StackPanel>
                    <Button x:Name="BtnClear" Content="ðŸ—‘  Vymazat zÃ¡znamy" Style="{StaticResource BOrange}"
                            Click="BtnClear_Click" HorizontalAlignment="Stretch"/>

                    <Separator/>

                    <TextBlock Text="PÅ˜EHRÃVÃNÃ" Style="{StaticResource Sec}"/>
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,4,0">
                            <TextBlock Text="OpakovÃ¡nÃ­" Foreground="#6C7086" FontSize="10" Margin="0,0,0,3"/>
                            <TextBox x:Name="TxtRepeat" Text="1"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Rychlost Ã—" Foreground="#6C7086" FontSize="10" Margin="0,0,0,3"/>
                            <TextBox x:Name="TxtSpeed" Text="1.0"/>
                        </StackPanel>
                    </Grid>
                    <CheckBox x:Name="ChkStopOnError"  Content="Zastavit pÅ™i prvnÃ­ chybÄ›" Margin="0,2,0,4"/>
                    <CheckBox x:Name="ChkScreenshots"  Content="Screenshot pÅ™i chybÄ›"     Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <Button x:Name="BtnPlay"     Content="â–¶  PÅ™ehrÃ¡t" Style="{StaticResource BGreen}"
                                Click="BtnPlay_Click" Margin="0,0,6,0" IsEnabled="False"/>
                        <Button x:Name="BtnStopPlay" Content="â¹" Style="{StaticResource BGray}"
                                Click="BtnStopPlay_Click" IsEnabled="False" Padding="10,6"/>
                    </StackPanel>

                    <Separator/>

                    <TextBlock Text="EXPORT" Style="{StaticResource Sec}"/>
                    <Button x:Name="BtnExport" Content="ðŸ“„  HTML Report" Style="{StaticResource BBlue}"
                            Click="BtnExport_Click" HorizontalAlignment="Stretch" IsEnabled="False"/>

                    <Separator/>

                    <TextBlock Text="STATISTIKY" Style="{StaticResource Sec}"/>
                    <Border Background="#181825" CornerRadius="6" Padding="10,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock x:Name="TxtOk"    Text="âœ“  0" Foreground="#A6E3A1" FontWeight="Bold" Margin="0,0,12,0"/>
                                <TextBlock x:Name="TxtErr"   Text="âœ—  0" Foreground="#F38BA8" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock x:Name="TxtFlaUI" Text="âš™  0" Foreground="#89B4FA" FontSize="11" Margin="0,0,12,0"/>
                                <TextBlock x:Name="TxtCoord" Text="ðŸ–±  0" Foreground="#F9E2AF" FontSize="11"/>
                            </StackPanel>
                            <TextBlock x:Name="TxtDur"   Text="" Foreground="#6C7086" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- â”€â”€ COL 1: Recorded list + selected element inspector â”€â”€â”€â”€â”€â”€â”€ -->
            <Grid Grid.Column="1" Margin="0,0,8,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <Border Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="NAHRANÃ KLIKNUTÃ" Style="{StaticResource Sec}" DockPanel.Dock="Left" Margin="0"/>
                            <TextBlock x:Name="TxtRecordCount" Text="0" Foreground="#6C7086" FontSize="11"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </DockPanel>
                        <ListBox x:Name="ClickList" Grid.Row="1"
                                 SelectionChanged="ClickList_SelectionChanged"/>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="1" Text="ELEMENT INSPEKTOR" Style="{StaticResource Sec}" Margin="0,10,0,6"/>

                <Border Grid.Row="2" Style="{StaticResource Card}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="InspectorPanel">
                            <TextBlock x:Name="TxtInspHint" Text="â† Vyber zÃ¡znam"
                                       Foreground="#6C7086" FontSize="11" TextWrapping="Wrap"/>

                            <!-- Rows filled from code -->
                            <Grid x:Name="InspectorGrid" Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/><RowDefinition/><RowDefinition/>
                                    <RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- â”€â”€ COL 2: Test results â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Border Grid.Column="2" Style="{StaticResource Card}" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DockPanel Margin="0,0,0,10">
                        <TextBlock Text="VÃSLEDKY TESTU" Style="{StaticResource Sec}" DockPanel.Dock="Left" Margin="0"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button x:Name="BtnTicket" Content="ðŸ“‹ Ticket" Style="{StaticResource BPurple}"
                                    Click="BtnTicket_Click" FontSize="10" Padding="8,4"
                                    IsEnabled="False" Margin="0,0,6,0"/>
                            <Button Content="Vymazat" Style="{StaticResource BGray}"
                                    Click="BtnClearResults_Click" FontSize="10" Padding="8,4"/>
                        </StackPanel>
                    </DockPanel>
                    <ListBox x:Name="ResultList" Grid.Row="1"
                             SelectionChanged="ResultList_SelectionChanged"/>
                </Grid>
            </Border>

            <!-- â”€â”€ COL 3: Exception detail + global â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Border Grid.Column="3" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="120"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="VÃJIMKA &amp; CALL STACK" Style="{StaticResource Sec}"/>

                    <!-- Summary box -->
                    <Border Grid.Row="1" x:Name="ExBox" Background="#181825" CornerRadius="6"
                            Padding="10,8" Margin="0,0,0,8" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="TxtExType"    FontWeight="Bold" Foreground="#F38BA8" FontSize="12" TextWrapping="Wrap"/>
                            <TextBlock x:Name="TxtExMessage" Foreground="#CDD6F4" FontSize="11" TextWrapping="Wrap" Margin="0,4,0,4"/>
                            <TextBlock x:Name="TxtExSource"  Foreground="#6C7086" FontSize="10" TextWrapping="Wrap"/>
                            <TextBlock x:Name="TxtExTime"    Foreground="#6C7086" FontSize="10"/>
                            <!-- Inner exception indicator -->
                            <TextBlock x:Name="TxtExInner"   Foreground="#FAB387" FontSize="10"
                                       Margin="0,4,0,0" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- Full call stack -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TxtStack"
                                   Text="â† Vyber krok ve vÃ½sledcÃ­ch pro zobrazenÃ­ call stacku"
                                   Foreground="#6C7086" FontFamily="Consolas" FontSize="11"
                                   TextWrapping="Wrap" Padding="4"/>
                    </ScrollViewer>

                    <Separator Grid.Row="3"/>

                    <!-- Global exceptions -->
                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="GLOBÃLNÃ VÃJIMKY" Style="{StaticResource Sec}"/>
                        <ListBox x:Name="GlobalExList" Grid.Row="1"
                                 SelectionChanged="GlobalExList_SelectionChanged"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- STATUS BAR -->
        <Border Grid.Row="2" Background="#252535" Padding="14,6" Margin="10,0,10,8" CornerRadius="6">
            <TextBlock x:Name="TxtFooter" Foreground="#6C7086" FontSize="11"
                       Text="PÅ™ipraveno. Klikni âº NahrÃ¡t â€“ FlaUI bude automaticky inspektovat kaÅ¾dÃ½ kliknutÃ½ element."/>
        </Border>
    </Grid>
</Window>
