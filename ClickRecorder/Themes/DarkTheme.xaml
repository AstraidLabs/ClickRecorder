<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:ClickRecorder.Helpers">

    <!-- Dark theme brand tokens -->
    <Color x:Key="Color.Background">#023444</Color>
    <Color x:Key="Color.Surface">#164453</Color>
    <Color x:Key="Color.SurfaceAlt">#25505E</Color>

    <Color x:Key="Color.TextPrimary">#F7F7FA</Color>
    <Color x:Key="Color.TextSecondary">#ADBCC3</Color>
    <Color x:Key="Color.TextDisabled">#899FA8</Color>

    <Color x:Key="Color.BorderSubtle">#3F6571</Color>
    <Color x:Key="Color.Border">#557886</Color>

    <Color x:Key="Color.ButtonPrimaryBg">#884DFF</Color>
    <Color x:Key="Color.ButtonPrimaryHoverBg">#7A45E6</Color>
    <Color x:Key="Color.ButtonPrimaryPressedBg">#703FD1</Color>
    <Color x:Key="Color.ButtonPrimaryText">#FFFFFF</Color>

    <Color x:Key="Color.ButtonSuccessBg">#89E103</Color>
    <Color x:Key="Color.ButtonSuccessHoverBg">#7ECF03</Color>
    <Color x:Key="Color.ButtonSuccessPressedBg">#73BD03</Color>
    <Color x:Key="Color.ButtonSuccessText">#023444</Color>

    <Color x:Key="Color.SelectionBg">#33884DFF</Color>
    <Color x:Key="Color.FocusRing">#66884DFF</Color>
    <Color x:Key="Color.Overlay">#80000000</Color>

    <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background}"/>
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="Brush.SurfaceAlt" Color="{StaticResource Color.SurfaceAlt}"/>

    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource Color.TextSecondary}"/>
    <SolidColorBrush x:Key="Brush.TextDisabled" Color="{StaticResource Color.TextDisabled}"/>

    <SolidColorBrush x:Key="Brush.BorderSubtle" Color="{StaticResource Color.BorderSubtle}"/>
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}"/>

    <SolidColorBrush x:Key="Brush.ButtonPrimaryBg" Color="{StaticResource Color.ButtonPrimaryBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonPrimaryHoverBg" Color="{StaticResource Color.ButtonPrimaryHoverBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonPrimaryPressedBg" Color="{StaticResource Color.ButtonPrimaryPressedBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonPrimaryText" Color="{StaticResource Color.ButtonPrimaryText}"/>

    <SolidColorBrush x:Key="Brush.ButtonSuccessBg" Color="{StaticResource Color.ButtonSuccessBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonSuccessHoverBg" Color="{StaticResource Color.ButtonSuccessHoverBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonSuccessPressedBg" Color="{StaticResource Color.ButtonSuccessPressedBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonSuccessText" Color="{StaticResource Color.ButtonSuccessText}"/>

    <SolidColorBrush x:Key="Brush.SelectionBg" Color="{StaticResource Color.SelectionBg}"/>
    <SolidColorBrush x:Key="Brush.FocusRing" Color="{StaticResource Color.FocusRing}"/>
    <SolidColorBrush x:Key="Brush.Overlay" Color="{StaticResource Color.Overlay}"/>

    <Color x:Key="Color.ButtonDangerBg">#E5484D</Color>
    <Color x:Key="Color.ButtonWarningBg">#F5A524</Color>
    <Color x:Key="Color.ButtonNeutralBg">#6B7280</Color>
    <Color x:Key="Color.ButtonNeutralText">#F7F7FA</Color>
    <Color x:Key="Color.SectionAccent">#884DFF</Color>

    <SolidColorBrush x:Key="Brush.ButtonDangerBg" Color="{StaticResource Color.ButtonDangerBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonWarningBg" Color="{StaticResource Color.ButtonWarningBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonNeutralBg" Color="{StaticResource Color.ButtonNeutralBg}"/>
    <SolidColorBrush x:Key="Brush.ButtonNeutralText" Color="{StaticResource Color.ButtonNeutralText}"/>
    <SolidColorBrush x:Key="Brush.SectionAccent" Color="{StaticResource Color.SectionAccent}"/>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <Style x:Key="Sec" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.SectionAccent}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="Lbl" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextDisabled}"/>
        <Setter Property="Margin" Value="0,0,0,3"/>
    </Style>

    <Style x:Key="Btn" TargetType="Button">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True"><Setter Property="Opacity" Value="0.80"/></Trigger>
                        <Trigger Property="IsEnabled" Value="False"><Setter Property="Opacity" Value="0.30"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BBlue" TargetType="Button" BasedOn="{StaticResource Btn}">
        <Setter Property="Background" Value="{DynamicResource Brush.ButtonPrimaryBg}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.ButtonPrimaryText}"/>
    </Style>
    <Style x:Key="BGreen" TargetType="Button" BasedOn="{StaticResource Btn}">
        <Setter Property="Background" Value="{DynamicResource Brush.ButtonSuccessBg}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.ButtonSuccessText}"/>
    </Style>
    <Style x:Key="BRed" TargetType="Button" BasedOn="{StaticResource Btn}">
        <Setter Property="Background" Value="{DynamicResource Brush.ButtonDangerBg}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.ButtonPrimaryText}"/>
    </Style>
    <Style x:Key="BOrange" TargetType="Button" BasedOn="{StaticResource Btn}">
        <Setter Property="Background" Value="{DynamicResource Brush.ButtonWarningBg}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.ButtonSuccessText}"/>
    </Style>
    <Style x:Key="BPurple" TargetType="Button" BasedOn="{StaticResource Btn}">
        <Setter Property="Background" Value="{DynamicResource Brush.ButtonPrimaryBg}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.ButtonPrimaryText}"/>
    </Style>
    <Style x:Key="BGray" TargetType="Button" BasedOn="{StaticResource Btn}">
        <Setter Property="Background" Value="{DynamicResource Brush.ButtonNeutralBg}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.ButtonNeutralText}"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="7,5"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="CaretBrush" Value="{DynamicResource Brush.TextPrimary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="PlaceholderText"
                                       Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:PlaceholderService.Text)}"
                                       Foreground="{DynamicResource Brush.TextDisabled}"
                                       Margin="2,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value=""><Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/></Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True"><Setter Property="BorderBrush" Value="{DynamicResource Brush.FocusRing}"/></Trigger>
                        <Trigger Property="IsEnabled" Value="False"><Setter Property="Opacity" Value="0.5"/></Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
        <Setter Property="Padding" Value="7,4"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="11.5"/>
    </Style>
    <Style TargetType="ListBoxItem">
        <Setter Property="Padding" Value="8,4"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True"><Setter Property="Background" Value="{DynamicResource Brush.SurfaceAlt}"/></Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Separator">
        <Setter Property="Background" Value="{DynamicResource Brush.Border}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,8"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    <Style x:Key="PanelExpander" TargetType="Expander">
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceAlt}"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>
    <Style x:Key="PanelContentCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="TabItem">
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextDisabled}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="14,8"/>
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceAlt}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource Brush.SectionAccent}"/>
                <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="TabControl">
        <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>
