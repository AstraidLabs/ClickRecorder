<Window x:Class="ClickRecorder.Views.TestCaseEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:ClickRecorder.Helpers"
        Title="ðŸ§ª Test Case Editor" Height="820" Width="1280"
        MinWidth="1000" MinHeight="580"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E">
    <Window.Resources>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
        </Style>
        <Style x:Key="Sec" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#89B4FA"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="Lbl" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#6C7086"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#181825"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="7,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CaretBrush" Value="#CDD6F4"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#181825"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True"><Setter Property="Opacity" Value="0.80"/></Trigger>
                            <Trigger Property="IsEnabled"   Value="False"><Setter Property="Opacity" Value="0.28"/></Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BBlue"   TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#89B4FA"/><Setter Property="Foreground" Value="#1E1E2E"/></Style>
        <Style x:Key="BGreen"  TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#A6E3A1"/><Setter Property="Foreground" Value="#1E1E2E"/></Style>
        <Style x:Key="BRed"    TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#F38BA8"/><Setter Property="Foreground" Value="#1E1E2E"/></Style>
        <Style x:Key="BGray"   TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#585B70"/><Setter Property="Foreground" Value="#CDD6F4"/></Style>
        <Style x:Key="BOrange" TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#FAB387"/><Setter Property="Foreground" Value="#1E1E2E"/></Style>
        <Style x:Key="BPurple" TargetType="Button" BasedOn="{StaticResource Btn}"><Setter Property="Background" Value="#CBA6F7"/><Setter Property="Foreground" Value="#1E1E2E"/></Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#181825"/>
            <Setter Property="BorderBrush" Value="#45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="7,4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#45475A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Separator"><Setter Property="Background" Value="#45475A"/><Setter Property="Margin" Value="0,6"/></Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- header -->
            <RowDefinition Height="*"/>     <!-- main -->
            <RowDefinition Height="Auto"/>  <!-- footer -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#252535" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock x:Name="TxtWindowTitle" Text="ðŸ§ª  NovÃ½ Test Case"
                               FontSize="17" FontWeight="Bold" Foreground="#CDD6F4"/>
                    <TextBlock x:Name="TxtWindowSub"
                               Text="PÅ™idej sekce Â· Do kaÅ¾dÃ© sekce nahraj nebo vloÅ¾ kliknutÃ­"
                               Foreground="#6C7086" FontSize="11" Margin="0,3,0,0"/>
                </StackPanel>
                <Border Grid.Column="1" x:Name="DirtyBadge" Background="#2a2510"
                        CornerRadius="6" Padding="10,4" VerticalAlignment="Center"
                        Visibility="Collapsed">
                    <TextBlock Text="â— NeuloÅ¾eno" Foreground="#F9E2AF" FontSize="11" FontWeight="Bold"/>
                </Border>
            </Grid>
        </Border>

        <!-- MAIN: metadata | sections+steps | json -->
        <Grid Grid.Row="1" Margin="10,8,10,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>   <!-- col 0: metadata -->
                <ColumnDefinition Width="220"/>   <!-- col 1: sections -->
                <ColumnDefinition Width="*"/>     <!-- col 2: steps of selected section -->
                <ColumnDefinition Width="260"/>   <!-- col 3: json -->
            </Grid.ColumnDefinitions>

            <!-- â”€â”€ COL 0: Metadata â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Border Style="{StaticResource Card}" Margin="0,0,8,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="METADATA" Style="{StaticResource Sec}"/>

                        <TextBlock Text="NÃ¡zev *" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="TxtTitle" Margin="0,0,0,7" FontWeight="SemiBold"
                                 TextChanged="MarkDirty"/>

                        <TextBlock Text="Popis" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="TxtDescription" Height="50" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,7" TextChanged="MarkDirty"/>

                        <Grid Margin="0,0,0,7">
                            <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="Priorita" Style="{StaticResource Lbl}"/>
                                <ComboBox x:Name="CboPriority" SelectionChanged="MarkDirtyCombo">
                                    <ComboBoxItem Content="ðŸ”´ Critical"/>
                                    <ComboBoxItem Content="ðŸŸ  High"/>
                                    <ComboBoxItem Content="ðŸŸ¡ Medium" IsSelected="True"/>
                                    <ComboBoxItem Content="ðŸŸ¢ Low"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Status" Style="{StaticResource Lbl}"/>
                                <ComboBox x:Name="CboStatus" SelectionChanged="MarkDirtyCombo">
                                    <ComboBoxItem Content="ðŸ“ Draft"/>
                                    <ComboBoxItem Content="âœ… Active" IsSelected="True"/>
                                    <ComboBoxItem Content="ðŸš« Deprecated"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Komponenta" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="TxtComponent" Margin="0,0,0,7" TextChanged="MarkDirty"/>

                        <TextBlock Text="Tagy (ÄÃ¡rkou)" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="TxtTags" Margin="0,0,0,7" TextChanged="MarkDirty"
                                 helpers:PlaceholderService.Text="smoke, login, ui"/>

                        <TextBlock Text="Verze" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="TxtVersion" Text="1.0" Margin="0,0,0,7" TextChanged="MarkDirty"/>

                        <Separator/>
                        <TextBlock Text="PRECONDITIONS" Style="{StaticResource Sec}"/>
                        <TextBox x:Name="TxtPreconditions" Height="65" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,7" TextChanged="MarkDirty"
                                 helpers:PlaceholderService.Text="Co musÃ­ bÃ½t splnÄ›noâ€¦"/>

                        <Separator/>
                        <TextBlock Text="OÄŒEKÃVANÃ VÃSLEDEK" Style="{StaticResource Sec}"/>
                        <TextBox x:Name="TxtExpectedOutcome" Height="65" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,7" TextChanged="MarkDirty"
                                 helpers:PlaceholderService.Text="Po ÃºspÄ›Å¡nÃ©m prÅ¯bÄ›huâ€¦"/>

                        <Separator/>
                        <TextBlock Text="POZNÃMKY" Style="{StaticResource Sec}"/>
                        <TextBox x:Name="TxtNotes" Height="55" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 TextChanged="MarkDirty"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- â”€â”€ COL 1: Sections â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Border Style="{StaticResource Card}" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="SEKCE" Style="{StaticResource Sec}"/>

                    <ListBox x:Name="SectionList" Grid.Row="1"
                             SelectionChanged="SectionList_SelectionChanged"
                             FontFamily="Consolas" FontSize="11.5"/>

                    <!-- Section actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,6">
                        <Button Content="â¬†" Style="{StaticResource BGray}"
                                Click="BtnSecUp_Click" Padding="8,4" Margin="0,0,3,0"/>
                        <Button Content="â¬‡" Style="{StaticResource BGray}"
                                Click="BtnSecDown_Click" Padding="8,4" Margin="0,0,3,0"/>
                        <Button x:Name="BtnDeleteSec" Content="ðŸ—‘" Style="{StaticResource BRed}"
