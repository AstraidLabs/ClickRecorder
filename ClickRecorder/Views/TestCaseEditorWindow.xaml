                    </StackPanel>
                    <Button Grid.Row="4" Content="âž• PÅ™idat sekci" Style="{StaticResource BGreen}"
                            Click="BtnAddSection_Click" HorizontalAlignment="Stretch"/>
                </Grid>
            </Border>

            <!-- â”€â”€ COL 2: Steps of selected section â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Border Style="{StaticResource Card}" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="180"/>
                    </Grid.RowDefinitions>

                    <!-- Section header + paste clicks button -->
                    <DockPanel Margin="0,0,0,6">
                        <TextBlock x:Name="TxtSectionHeader" Text="KROKY  â† vyber sekci vlevo"
                                   Style="{StaticResource Sec}" DockPanel.Dock="Left" Margin="0"/>
                        <TextBlock x:Name="TxtStepCount" Text="" Foreground="#6C7086"
                                   FontSize="11" DockPanel.Dock="Right" VerticalAlignment="Center"/>
                    </DockPanel>

                    <!-- Import clicks from recorder -->
                    <Border Grid.Row="1" Background="#1a2a20" CornerRadius="6"
                            Padding="10,7" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="TxtRecorderInfo"
                                       Text="Å½Ã¡dnÃ¡ kliknutÃ­ z recorderu"
                                       Foreground="#6C7086" FontSize="11"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    x:Name="BtnPasteClicks"
                                    Content="â¬‡ VloÅ¾it kliky do sekce"
                                    Style="{StaticResource BGreen}"
                                    Click="BtnPasteClicks_Click"
                                    IsEnabled="False"/>
                        </Grid>
                    </Border>

                    <!-- Step list -->
                    <ListBox x:Name="StepList" Grid.Row="2"
                             SelectionChanged="StepList_SelectionChanged"
                             FontFamily="Consolas" FontSize="11"/>

                    <!-- Step list controls -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6,0,6">
                        <Button Content="â¬†" Style="{StaticResource BGray}"
                                Click="BtnStepUp_Click" Padding="8,4" Margin="0,0,3,0"/>
                        <Button Content="â¬‡" Style="{StaticResource BGray}"
                                Click="BtnStepDown_Click" Padding="8,4" Margin="0,0,3,0"/>
                        <Button Content="âž• Krok" Style="{StaticResource BBlue}"
                                Click="BtnAddStep_Click" Margin="0,0,3,0"/>
                        <Button x:Name="BtnDeleteStep" Content="ðŸ—‘" Style="{StaticResource BRed}"
                                Click="BtnDeleteStep_Click" Padding="8,4" IsEnabled="False"/>
                    </StackPanel>

                    <!-- Inline step editor -->
                    <Border Grid.Row="4" Background="#1a1a2e" CornerRadius="6" Padding="10">
                        <StackPanel>
                            <TextBlock Text="EDITACE KROKU" Style="{StaticResource Sec}"/>
                            <TextBlock Text="Popis" Style="{StaticResource Lbl}"/>
                            <TextBox x:Name="TxtStepDesc" Height="52" TextWrapping="Wrap"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,5"
                                     helpers:PlaceholderService.Text="Co se v tomto kroku dÄ›lÃ¡â€¦"/>
                            <TextBlock Text="OÄekÃ¡vanÃ½ vÃ½sledek kroku" Style="{StaticResource Lbl}"/>
                            <TextBox x:Name="TxtStepExpected" Margin="0,0,0,6"
                                     helpers:PlaceholderService.Text="Co se mÃ¡ stÃ¡tâ€¦"/>
                            <Button Content="âœ“ UloÅ¾it krok" Style="{StaticResource BGreen}"
                                    Click="BtnSaveStep_Click" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- â”€â”€ COL 3: JSON preview â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="JSON" Style="{StaticResource Sec}"
                                   DockPanel.Dock="Left" Margin="0"/>
                        <Button Content="ðŸ”„" Style="{StaticResource BGray}"
                                Click="BtnRefreshJson_Click" DockPanel.Dock="Right"
                                Padding="6,3" FontSize="11"/>
                    </DockPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="TxtJson" IsReadOnly="True"
                                 Background="Transparent" Foreground="#A6E3A1"
                                 FontFamily="Consolas" FontSize="10.5"
                                 BorderThickness="0" TextWrapping="NoWrap"
                                 AcceptsReturn="True"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#252535" Padding="12,7"
                Margin="10,0,10,8" CornerRadius="6">
            <DockPanel>
                <TextBlock x:Name="TxtFooter" Foreground="#6C7086" FontSize="11"
                           VerticalAlignment="Center" Text="PÅ™ipraveno"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="BtnSave" Content="ðŸ’¾ UloÅ¾it do DB" Style="{StaticResource BGreen}"
                            Click="BtnSave_Click" Margin="0,0,8,0"/>
                    <Button Content="ðŸ“¤ Export JSON" Style="{StaticResource BBlue}"
                            Click="BtnExportJson_Click" Margin="0,0,8,0"/>
                    <Button Content="âœ• ZavÅ™Ã­t" Style="{StaticResource BGray}"
                            Click="BtnClose_Click"/>
