<Window x:Class="ClickRecorder.Views.StepResultDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detail kroku" Height="680" Width="950"
        MinHeight="520" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.Background}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TxtTitle" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Brush.TextPrimary}" TextWrapping="Wrap"/>
        <TextBlock x:Name="TxtSummary" Grid.Row="1" Margin="0,8,0,0" Foreground="{DynamicResource Brush.TextSecondary}" FontSize="12" TextWrapping="Wrap"/>
        <TextBlock x:Name="TxtScreenshotLabel" Grid.Row="2" Margin="0,14,0,6" Foreground="{DynamicResource Brush.SectionAccent}" FontSize="11" FontWeight="Bold" Text="SCREENSHOT" Visibility="Collapsed"/>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,6,0,6">
            <StackPanel>
                <Image x:Name="ImgScreenshot" Stretch="Uniform" MaxHeight="260" Visibility="Collapsed" Margin="0,0,0,10"/>
                <TextBlock x:Name="TxtDetails" FontFamily="Consolas" Foreground="{DynamicResource Brush.TextPrimary}" FontSize="12" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Zavřít" Width="90" Padding="10,5" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
