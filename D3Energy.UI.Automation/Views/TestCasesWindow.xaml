<Window x:Class="D3Energy.UI.Automation.Views.TestCasesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:D3Energy.UI.Automation.Helpers"
        xmlns:icons="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
        Title="Test Cases" Height="680" Width="1050"
        MinWidth="800" MinHeight="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.Background}">
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource Brush.SurfaceAlt}" Padding="18,12">
            <StackPanel>
                <TextBlock Text="Test Cases" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Brush.TextPrimary}"/>
                <TextBlock Foreground="{DynamicResource Brush.TextSecondary}" FontSize="11" Margin="0,3,0,0"
                           Text="Spravuj, edituj a exportuj test cases Â· UloÅ¾enÃ© jako JSON v SQLite DB"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{DynamicResource Brush.SurfaceAlt}" Padding="12,8" BorderBrush="{DynamicResource Brush.Border}" BorderThickness="0,1,0,0">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Content="NovÃ½" Style="{StaticResource BGreen}"
                            Click="BtnNew_Click" Margin="0,0,8,0"/>
                    <Button x:Name="BtnEdit" Content="âœ Editovat" Style="{StaticResource BBlue}"
                            Click="BtnEdit_Click" Margin="0,0,8,0" IsEnabled="False"/>
                    <Button x:Name="BtnDelete" Content="ðŸ—‘ Smazat" Style="{StaticResource BRed}"
                            Click="BtnDelete_Click" Margin="0,0,16,0" IsEnabled="False"/>
                    <Button Content="Export JSON" Style="{StaticResource BOrange}"
                            Click="BtnExport_Click" Margin="0,0,8,0"/>
                    <Button Content="ðŸ“¤ Export vÅ¡e" Style="{StaticResource BOrange}"
                            Click="BtnExportAll_Click" Margin="0,0,16,0"/>
                    <Button Content="ðŸ“¥ Import JSON" Style="{StaticResource BGray}"
                            Click="BtnImport_Click"/>
                </StackPanel>

                <!-- Filter -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”" Foreground="{DynamicResource Brush.TextSecondary}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="TxtFilter" Width="160" helpers:PlaceholderService.Text="Filtrovatâ€¦"
                             TextChanged="TxtFilter_Changed"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Content: list + detail -->
        <Grid Grid.Row="2" Margin="12,10,12,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- List -->
            <Border Style="{StaticResource Card}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="TEST CASES" Style="{StaticResource Sec}"
                                   DockPanel.Dock="Left" Margin="0"/>
                        <TextBlock x:Name="TxtCount" Text="0" Foreground="{DynamicResource Brush.TextSecondary}"
                                   FontSize="11" DockPanel.Dock="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                    <ListBox x:Name="TcList" Grid.Row="1"
                             SelectionChanged="TcList_SelectionChanged"
                             MouseDoubleClick="TcList_DoubleClick"/>
                </Grid>
            </Border>

            <!-- Detail panel -->
            <Border Grid.Column="1" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="DETAIL" Style="{StaticResource Sec}"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TxtDetail"
                                   Text="â† Vyber test case"
                                   Foreground="{DynamicResource Brush.TextSecondary}" FontFamily="Consolas"
                                   FontSize="11" TextWrapping="Wrap" Padding="4"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3" Background="{DynamicResource Brush.SurfaceAlt}" Padding="14,6" Margin="12,0,12,8" CornerRadius="6">
            <TextBlock x:Name="TxtFooter" Foreground="{DynamicResource Brush.TextSecondary}" FontSize="11"
                       Text="Dvojklik = otevÅ™Ã­t editor"/>
        </Border>
    </Grid>
</Window>
